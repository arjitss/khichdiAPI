{
  "name": "khichdi-api",
  "version": "1.0.0",
  "description": "What do you want to eat today ?",
  "main": "index.js",
  "scripts": {
    "prebuild": "typedoc",
    "build": "tsc",
    "watch": "tsc --w",
    "build:production": "npm run prestart && npm prune --production",
    "prestart": "npm run build",
    "start": "node bin/index.js",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "npx jest --watch --collectCoverage=false --detectOpenHandles --colors --verbose --reporters=default",
    "test:ci": "npx jest --ci --reporters=default --reporters=jest-junit --silent --colors --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "author": "Arjit",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-junit": "^11.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "node": "^14.5.0",
    "npm": "^6.14.7",
    "stable": "^0.1.8"
  }
}
